    if(a <= 0 || b <= 0 || c <= 0) {
        printf("The numbers must be positive!");
        return 0;
    }
    float side = a, side2 = a, mainSide = a;
    for(int i = 0; i < 2; i++) {
        if(i == 0) {
            if(b < side) {
                side = b;
            }
            if(b > mainSide) {
                mainSide = b;
            }
        }
        else if(i == 1) {
            if(c < side) {
                side = c;
                side2 = b;
            }
            else if(c < side2) {
                if(c < side) {
                    side = c;
                    side2 = b;
                }
                else {
                    side2 = c;
                }
            }
            else if(c > mainSide) {
                mainSide = c;
            }
        }
    }
    if(side + side2 < mainSide) {
        printf("The sum of the two small sides is greater than the 3rd side!");
        return 0;
    }

    printf("P = %.2f\n", (a + b + c));
    float p = (a + b + c)/2;
    printf("S = %.2f\n", (sqrt (p * ( p - a )*( p - b )*( p - c ))));

    if(a == b == c) {
        printf("Equilateral triangle.\n");
    }
    else if(a == b || b == c || c == a) {
        printf("Isosceles triangle.\n");
    }
    else {
        printf("Scalene triangle.\n");
    }

    if(pow(a , 2)+ pow(b , 2)< pow( c, 2)) {
        printf("An obtuse triangle.\n");
    }
    else if(pow(a, 2)+pow(b, 2)==pow(c, 2)) {
        printf("Right-angled triangle.\n");
    }
    else {
        printf("Acute triangle.\n");
    }
}
