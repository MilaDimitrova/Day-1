#include <stdio.h>
#include <stdlib.h>


int main()
{
    char operat;
    printf("Choose one operation: + , -, *, / -->");
    scanf("%c", &operat);
    float n, n2;
    printf("Please enter first number =\n ");
    scanf("%f", &n);
    printf("Please enter second number = ");
    scanf("%f", &n2);
    if(operat == '+') {
        printf("%.2f + %.2f = %.2f", n, n2, ( n + n2));
    }
    else if(operat == '-') {
        printf("%.2f - %.2f = %.2f", n, n2, (n - n2));
    }
    else if(operat == '*') {
        printf("%.2f * %.2f = %.2f", n, n2, (n * n2));
    }
    else if(operat == '/') {
        if(n2 == 0) {
            printf("Can't divide by 0.");
            return -1;
        }
        printf("%.2f / %.2f = %.2f", n , n2, (n / n2));
    }
    else {
        printf("Operation is not recognized.");
        return -1;
    }
    return 0;
}

